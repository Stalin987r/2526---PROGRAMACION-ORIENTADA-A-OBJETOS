# Clase base que representa un vehículo (Abstracción)
class Vehiculo:
    def __init__(self, marca, modelo):
        # Encapsulación: atributos privados que no pueden modificarse desde fuera
        self.__marca = marca
        self.__modelo = modelo

    # Método que permite acceder a la información del vehículo
    def obtener_info(self):
        return f"{self.__marca} {self.__modelo}"

    # Método genérico que será sobrescrito por las clases hijas (Polimorfismo)
    def acelerar(self):
        pass


# Clase Auto que hereda de Vehiculo (Herencia)
class Auto(Vehiculo):
    # Polimorfismo: el método acelerar tiene un comportamiento diferente para Auto
    def acelerar(self):
        return "El auto acelera suavemente."


# Clase Moto que también hereda de Vehiculo (Herencia)
class Moto(Vehiculo):
    # Polimorfismo: redefinición del método acelerar adaptado a una moto
    def acelerar(self):
        return "La moto acelera rápidamente con un sonido fuerte."


# Lista que contiene objetos de las clases hijas
vehiculos = [
    Auto("Toyota", "Corolla"),   # Instancia de Auto
    Moto("Yamaha", "MT-07")      # Instancia de Moto
]

# Ciclo que demuestra el polimorfismo en acción
for v in vehiculos:
    # Se imprime la descripción del vehículo y su forma de acelerar
    print(v.obtener_info(), "-", v.acelerar())
